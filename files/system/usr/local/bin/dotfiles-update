#!/bin/bash

# Dotfiles update script - accessible system-wide
# This script updates dotfiles from the GitHub repository

DOTFILES_DIR="/home/$USER/.dotfiles"

if [[ -d "$DOTFILES_DIR" ]]; then
    cd "$DOTFILES_DIR"
    git pull origin main
    echo "✅ Dotfiles updated successfully!"
else
    echo "❌ Dotfiles directory not found. Run dotfiles-setup first."
    exit 1
fi
